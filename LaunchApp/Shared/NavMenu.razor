<MBottomNavigation
    @bind-Value="value"
    BackgroundColor="@color"
    Dark
    Shift>
    <MButton>
        <span>Home</span>

        <MIcon>mdi-home</MIcon>
    </MButton>

    <MButton>
        <span>FFXIV</span>

        <MIcon>mdi-firework</MIcon>
    </MButton>

    <MButton>
        <span>Spellborn</span>

        <MIcon>mdi-book</MIcon>
    </MButton>

    
</MBottomNavigation>

@code {

    StringNumber value = 1;

    string color
    {
        get
        {
            if (value == 0) return "blue-grey";
            if (value == 1) return "red";
            if (value == 2) return "brown";
            if (value == 3) return "indigo";
            return "blue-grey";
        }
    }

}
